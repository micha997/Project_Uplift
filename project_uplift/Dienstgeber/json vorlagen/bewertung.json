//Struktur der POST Anfrage auf den server
{  
   "wertung":1,
   "comment":"Lauft ganz gut"
}
//wertung = 1 : positiv
//wertung = 0 : neutral
//wertung = -1 : negativ

//equipmentID wird ueber die URL Parameter uebergeben

//Struktur des internen Arrays, wie die Datem im server gespeichert werden
//"gesamtWertung" wird mit jedem Post/Del geupdated (berechnet mit den "wertungen")
//"bewertungID" ist fuer die ID-Vergabe der Bewertungen (einfacher Zaehler)
[
   {
      "bewertungen":[
         {
            "id":0,
            "wertung":1,
            "comment":"Lauft ganz gut"
         },
         {
            "id":1,
            "wertung":-1,
            "comment":"schlecht"
         }
      ],
      "equipID":10035579,
      "gesamtWertung":0,
      "bewertungID":2    
   },
   {
      "bewertungen":[
         {
            "id":0,
            "wertung":1,
            "comment":"tip top"
         }
      ],
